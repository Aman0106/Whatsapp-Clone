<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/validation" />

    <TextView
        android:id="@+id/txt_contact_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Verify +9198141XXXXX"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="We just sent you an OTP"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_contact_display"
        app:layout_constraintStart_toStartOf="@+id/txt_contact_display"
        app:layout_constraintTop_toBottomOf="@+id/txt_contact_display" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#F8F8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:padding="4dp">

                <EditText
                    android:id="@+id/edt_input1"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/otp_block"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    tools:text="1"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_input2"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/otp_block"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    tools:text="1"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_input3"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/otp_block"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    tools:text="1"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_input4"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/otp_block"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    tools:text="1"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_input5"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/otp_block"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    tools:text="1"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_input6"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/otp_block"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    tools:text=""
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />

            </LinearLayout>
            <Button
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="110dp"
                android:layout_marginTop="16dp"
                android:text="Verify"
                android:textSize="18sp"
                android:backgroundTint="@color/green"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>